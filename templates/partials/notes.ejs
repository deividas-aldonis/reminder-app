<% notes.forEach(note=> { %>
    <div data-id="<%"="note._id" %>
        class="flex flex-col space-y-4 rounded-3xl bg-yellow py-4 px-8">
        <div class="flex justify-between">
            <h3 data-name="title" class="py-2 font-bold">
                <%= note.title %>
            </h3>
            <div class="flex space-x-4">
                <button class="update-button">
                    <i class="fa-solid fa-pen-to-square p-2 text-lg duration-200 hover:text-indigo-500"></i>
                </button>
                <button class="remove-button">
                    <i class="fa-solid fa-trash p-2 text-lg duration-200 hover:text-rose-500"></i>
                </button>
            </div>
        </div>
        <p data-name="description">
            <%= note.description %>
        </p>

        <div class="flex justify-between">
            <span class="font-bold">Due to: <%= note.date %></span>
        </div>
    </div>
    <% }) %>