<div id="create-modal"
  class="fixed top-0 left-0 hidden h-screen w-screen items-center justify-center overflow-hidden bg-black bg-opacity-70">
  <div class="flex w-11/12  h-4/6 md:w-8/12 lg:w-1/2 max-w-3xl flex-col space-y-4 rounded-md bg-white p-4">
    <input
      class="rounded-sm bg-background p-2 font-bold text-white placeholder:font-normal placeholder:italic placeholder:text-slate-200"
      placeholder="title" type="text" id="create-title" />
    <textarea id="create-description"
      class="h-full rounded-sm bg-background p-2 text-white placeholder:italic placeholder:text-slate-200"
      placeholder="description" rows="4">
    </textarea>
    <input class="rounded-sm bg-background p-2 text-white placeholder:italic placeholder:text-slate-200"
      placeholder="date" type="text" id="create-date-picker" />
    <button id="create-button" class="rounded-sm bg-main p-2 font-bold text-white" type="button">
      Create
    </button>
  </div>
</div>