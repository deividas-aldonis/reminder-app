<form data-name="search-form" class="flex w-full items-center">
    <label for="simple-search" class="sr-only">Search</label>
    <div class="relative w-full">
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <i class="fa-solid fa-magnifying-glass text-gray-700"></i>
        </div>
        <input type="text" name="search"
            class="block w-full rounded-sm border border-gray-300 bg-gray-50 p-2.5 pl-10 text-sm text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400"
            placeholder="Search" required />
    </div>
    <button type="submit" class="ml-2 h-11 w-11 rounded-sm border border-main p-2.5 text-sm font-medium text-white">
        <i class="fa-solid fa-magnifying-glass"></i>
        <span class="sr-only">Search</span>
    </button>
</form>